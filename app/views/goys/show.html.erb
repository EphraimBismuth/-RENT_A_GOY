<% content_for :above_container do %>

  <div class="profil-pic">
    <div class="picandname">
      <%= image_tag(@goy.profile_picture, alt: "profile_picture", class: 'avatar') %>
      <p class="profil-name"> <%= @goy.name.capitalize %></p>
      <p><%= @goy.address %></p>
      <p><%= @goy.phone_number %></p>
    </div>
  </div>

<% end %>

<div class="goy-profil">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="skills">
        <h2 class="light_subtext" >Skills</h2>
        <p style="margin: 0">I'll take care of all you Jews!</p>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="price">
        <h2 class="light_subtext" >Price</h2>
        <h4 class="bold_price"><%= number_to_currency(@goy.price) %></h4>
      </div>
    </div>
    <div class="col-xs-12 col-md-12">
      <div class="avaibilty">
        <h2>Upcoming Availability</h2>
        <%= render 'shared/upcoming_availability' %>
      </div>
    </div>
  </div>
</div>
