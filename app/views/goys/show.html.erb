        <!-- GOY SKILLS NEED TO BE ADDED TO THE MODEL -->

      </div>

      <div class="price">
        <div class="light_subtext">
            per Shabbat
          </div>
        <div class="bold_price">
          <%= number_to_currency(@goy.price) %>
        </div>

      </div>
    </div>

    <!-- Upcoming Availability -->
    <%= render 'shared/upcoming_availability' %>
  </div>
</div>

