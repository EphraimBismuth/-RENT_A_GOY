<div class="goy_info">
  <div class="picture">
   <%= image_tag("#{@goy.profile_picture}", alt: "profile_picture", class: "avatar") %>
  </div>

  <div class="identity">
    <h2 class="name_title">
    <%= @goy.name %>
    </h2>
    <div class="contact">
      <p>
      <%= "🏚 #{@goy.address}"%>
      <!-- NEED TO UPDATE MODEL TO HAVE JUST CITY CATEGORY -->
      <br>
      <%= "📞 #{@goy.phone_number}"%>
      <!-- [HIDE NUMBER SO PPL MUST USE US] -->

    </p>
    </div>
    <div class="details">
      <div class="skills">
        <div class="light_subtext">Skills</div>
        I'll take care of all you Jews!
        <!-- GOY SKILLS NEED TO BE ADDED TO THE MODEL -->

      </div>

      <div class="price">
        <div class="light_subtext">
            per Shabbat
          </div>
        <div class="bold_price">
          <%= number_to_currency(@goy.price) %>
        </div>

      </div>
    </div>

    <!-- TO DO CALENDAR -->
    <div class="calendar">
      <h3>📆Upcoming Availability</h3>
      <table class="table table-striped">
        <tbody>
        <% @bookings.each do |booking| %>
          <% date = booking.start_date %>
          <tr>
            <td>Shabbat of<br/><%= date.strftime('%b %e %y') %></td>
            <td><%= booking_link(date, booking) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


